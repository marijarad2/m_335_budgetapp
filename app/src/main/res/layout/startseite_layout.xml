<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartseiteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="185dp"
            android:layout_height="52dp"
            android:text="Budgetplaner"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="27dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/startseite"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="103dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:text="Ausgaben"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="383dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="125dp"
                    android:layout_height="49dp"
                    android:text="Einnahmen"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="450dp" />

                <Button
                    android:id="@+id/buttonsparziele"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:text="Sparziele"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="383dp" />

                <Button
                    android:id="@+id/buttonfixkosten"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:text="Fixkosten"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="383dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>